<%= render 'devise/shared/auth_header' do %>
  <% if flash[:alert] %>
    <div class="mb-4 p-2 bg-red-100 border border-red-400 text-red-700 rounded">
      <%= flash[:alert] %>
    </div>
  <% elsif flash[:notice] %>
    <div class="mb-4 p-3 bg-green-100 border border-green-400 text-green-700 rounded">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
              class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400
              focus:outline-none focus:ring-rose-500 focus:border-rose-500 sm:text-sm",
              placeholder: "example@email.com" %>
      </div>
      <p class="mt-2 text-sm text-gray-500">
        登録時に使用したメールアドレスを入力してください。パスワードリセットのリンクをお送りします。
      </p>
    </div>

    <div>
      <%= f.submit "リセットリンクを送信", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm
            text-sm font-medium text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2
            focus:ring-rose-500" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      <%= link_to "ログイン画面に戻る", new_session_path(resource_name),
          class: "font-medium text-rose-600 hover:text-rose-500" %>
    </p>
  </div>
<% end %>